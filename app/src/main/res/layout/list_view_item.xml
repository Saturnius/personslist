<?xml version="1.0" encoding="utf-8"?><!--get ripple on older phones and make it green-->
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/color_highlight_focus"
    app:mrl_rippleHover="true"
    app:mrl_rippleInAdapter="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_dimen_small">

        <TextView
            android:id="@+id/list_item_person_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_dimen_normal" />

        <TextView
            android:id="@+id/list_item_company_view"
            style="@style/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_dimen_normal" />


    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>