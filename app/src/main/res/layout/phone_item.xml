<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:layout_margin="@dimen/between_items"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/phone_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_dimen_normal"
        android:src="@drawable/ic_action_phone_start" />

    <TextView
        android:id="@+id/item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_dimen_normal"
        android:paddingTop="@dimen/padding_dimen_normal"/>


</LinearLayout>