<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    android:padding="@dimen/padding_dimen_normal"
    tools:context="com.example.pipedrive.android.personslist.detail.DetailActivityFragment">

    <!-- persons data (name and company)-->
    <LinearLayout
        android:id="@+id/shared_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:orientation="vertical"
        android:padding="@dimen/padding_dimen_small" >

        <TextView
            android:id="@+id/person_name"
            style="@style/LargerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/org_name"
            style="@style/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- will hold emails-->

    <LinearLayout
        android:id="@+id/emails_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/vertical_margin"
        >

    </LinearLayout>

    <!-- will hold phones-->
    <LinearLayout

        android:id="@+id/phones_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/vertical_margin"
        >



    </LinearLayout>

</LinearLayout>
</ScrollView>