<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="@dimen/padding_dimen_normal"
    tools:context="com.example.pipedrive.android.personslist.detail.DetailActivityFragment">

    <!-- persons data (name and company)-->

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/person_name"
            style="@style/LargerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/person_name"
            android:id="@+id/org_name"
            style="@style/subText"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <!-- will hold emails-->

    <LinearLayout
        android:layout_below="@+id/org_name"
        android:id="@+id/emails_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/vertical_margin"
        >

    </LinearLayout>

    <!-- will hold phones-->
    <LinearLayout
        android:layout_below="@+id/emails_layout"
        android:id="@+id/phones_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/vertical_margin">

    </LinearLayout>

</RelativeLayout>
</ScrollView>